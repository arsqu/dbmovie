.queryMov {
  border-bottom: 1rpx solid #ccc;
  padding: 15rpx 20rpx;
  height: 60rpx;
  text-align: center;
}

.sch_list {
  display: flex;
  flex-direction: row;
  padding: 25rpx 0;
}

.sch_item {
  padding: 0 40rpx;
  border-bottom: 1rpx solid #eee;
}

.sch_point {
  padding: 8rpx;
  color: #fff;
  font-size: 28rpx;
}

.sch_point>view {
  padding: 8rpx;
  background: #f86f59;
  min-width: 35rpx;
  text-align: center;
  border-radius: 50%;
}

.sch_point .p_def {
  background: #888;
  padding: 12rpx 5rpx;
}

.sch_pto {
  width: 128rpx;
  height: 168rpx;
}

.sch_intro {
  padding: 0 20rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  text-align: left;
  flex: 1;
  justify-content: center;
  overflow: hidden;
}

.sch_intro>text {
  padding: 12rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.mov_date {
  color: #666;
  font-size: 25rpx;
}

.mov_author {
  color: #666;
  font-size: 25rpx;
}