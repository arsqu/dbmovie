page{
  background:#eee;
}

.user_head {
  height: 180rpx;
  background: #5BD05B;
  padding: 0 60rpx;
}

.avatar {
  display: flex;
  flex-direction: row;
}

.ava_pto{
  margin-right:50rpx;
  width:120rpx;
  height:120rpx;
  position:relative;
}

.avatar .u_name{
  display:flex;
  flex-direction:column;
}

.u_name .u_val {
  color: #fff;
  font-size: 35rpx;
  padding-bottom:20rpx;
}

.u_name .u_level{
  color:#fff;
  border:1rpx solid #ddd;
  border-radius:5rpx;
  font-size:25rpx;
  height:50rpx;
  line-height:50rpx;
  padding:5rpx 40rpx;
}

.ava_pto .profile{
  width: 120rpx;
  height: 120rpx;
  background: #fff;
  border-radius:50%;
}

.gender{
  width:25rpx;
  height:25rpx;
  position:absolute;
  right:0rpx;
  bottom:0;
  background:#fff;
  border-radius:50%;
  padding:5rpx;
}

.u_tabs{
  margin-top:25rpx;
  background:#fff;
}

.icon_list>view{
  padding:20rpx 25rpx;
  font-size:28rpx;
  border-bottom:1rpx solid #eee;
  display:flex;
  flex-direction:row;
  align-items:center;
  cursor:pointer;
}

.icon_png{
  width:45rpx;
  height:45rpx;
  padding-right:25rpx;
}

.icon_png image{
  width:100%;
  height:100%;
}
